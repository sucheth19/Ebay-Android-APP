<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:foregroundGravity="center"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="-1dp"
            android:text="Product Title"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/zipCodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTextView"
            android:layout_marginTop="8dp"
            android:textColor="@color/gray"
            android:text="Zip Code" />

        <TextView
            android:id="@+id/shippingCostTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/zipCodeTextView"
            android:layout_marginTop="9dp"
            android:textColor="@color/gray"
            android:text="Shipping Cost" />

        <TextView
            android:id="@+id/productCostTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shippingCostTextView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="108dp"
            android:layout_marginTop="5dp"
            android:text="Product Cost"
            android:textColor="@color/facebook_background"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/conditionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shippingCostTextView"
            android:layout_marginTop="7dp"
            android:textColor="@color/gray"
            android:text="Condition" />

        <ImageButton
            android:id="@+id/addToWishlistButton"
            android:layout_width="91dp"
            android:layout_height="53dp"
            android:layout_below="@+id/titleTextView"
            android:layout_gravity="right"
            android:layout_marginStart="47dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/zipCodeTextView"
            android:background="@drawable/ic_launcher_wishlist_round"
            android:contentDescription="Add to Wishlist" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
