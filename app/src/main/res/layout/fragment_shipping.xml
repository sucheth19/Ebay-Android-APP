<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShippingFragment">

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/truck_delivery" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="0dp"
            android:paddingLeft="10dp"
            android:text="Sold By"
            android:textColor="#090909"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/storename"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:text="Store Name"
            android:textColor="#090909"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/storeUrl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:autoLink="web"
            android:background="#BABABA"
            android:gravity="left"
            android:text=""
            android:layout_marginLeft="50dp"
            android:textColor="#B491DA"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="110dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/feedbackscore"
            android:layout_width="124dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:text="Feedback Score"
            android:textColor="#090909"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="297dp"
            android:layout_height="match_parent"
            android:paddingLeft="50dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/gray"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="141dp"
        android:orientation="horizontal"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/popularity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:text="Popularity"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="95dp"
            android:layout_marginLeft="60dp">

            <TextView
                android:id="@+id/popularityscore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="4sp"
                android:layout_marginLeft="120dp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/red"
                android:indeterminateOnly="false"
                android:max="100"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:rotation="-90"
                android:layout_marginLeft="15dp"
                android:textAlignment="center"

                tools:progress="90" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="160dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/feedbackstar"
            android:layout_width="144dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:text="Feedback Star"
            android:textColor="#090909"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="45dp"
            android:src="@drawable/star_circle" />

    </LinearLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="200dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="220dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shipping"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/ferry" />

        <TextView
            android:id="@+id/shippingInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="0dp"
            android:paddingLeft="10dp"
            android:text="Shipping Info"
            android:textColor="#090909"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="260dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shippingCost"
            android:layout_width="183dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:text="Shipping Cost"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/shippingCostTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:textColor="@color/gray"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="290dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/globalshipping"
            android:layout_width="181dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:text="Global Shipping"
            android:textColor="#090909"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/globalShippingInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textColor="@color/gray"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="320dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/handlingTime"
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:text="Handling Time"
            android:textColor="#090909"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/handlingTimeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textColor="@color/gray" />

    </LinearLayout>

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="-2dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="400dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/returnPolicy"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/dump_truck" />

        <TextView
            android:id="@+id/retutnPolcytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="0dp"
            android:paddingLeft="10dp"
            android:text="Return Policy"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="450dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/policy"
            android:layout_width="178dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:text="Policy"
            android:textColor="#090909"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/policyInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:textColor="@color/gray" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="470dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/returnsWithin"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:text="Returns Within"
            android:textColor="#090909"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/returnsWithinText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:textColor="@color/gray"
            tools:ignore="DuplicateIds" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="500dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/refundmodes"
            android:layout_width="211dp"
            android:layout_height="match_parent"
            android:text="Returns Mode"
            android:textColor="#090909"
            android:paddingLeft="10dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/refundMode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="530dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shippedBy"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:text="Shipped By"
            android:textColor="#090909"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/shippedSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:textColor="@color/gray" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/fab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/circle_background"
        android:scaleType="centerInside"
        android:src="@drawable/cart_plus"
        android:visibility="visible" />



</RelativeLayout>
